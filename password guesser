        "# Password Guessing Game with Clues\n",
        "secret_password = \"tree\"  # The password the player has to guess\n",
        "guess = \"\"\n",
        "\n",
        "print(\"Welcome to the Password Guessing Game!\")\n",
        "print(f\"Hint: The password starts with '{secret_password[0]}' and ends with '{secret_password[-1]}'.\")\n",
        "\n",
        "while guess != secret_password:\n",
        "    guess = input(\"Enter the password: \")\n",
        "    if guess != secret_password:\n",
        "        print(\"Incorrect! Try again.\")\n",
        "        print(f\"Clue: It starts with '{secret_password[0]}' and ends with '{secret_password[-1]}'.\")\n",
        "\n",
        "print(\"Congratulations! You guessed the password!\")"
